<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.afiq.dzikirpagipetang.MainActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardpagi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/morning"
            android:padding="@dimen/jarakrelative">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/tinggitext"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="115dp"
                android:gravity="center_vertical"
                android:text="@string/pagi"
                android:textColor="#fff"
                android:textSize="@dimen/ukurantext" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardsore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/twilight">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/tinggitext"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp"
                android:gravity="center_vertical"
                android:text="@string/sore"
                android:textColor="#fff"
                android:textSize="@dimen/ukurantext" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
